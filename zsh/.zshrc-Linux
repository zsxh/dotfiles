# python
export PYTHONUSERBASE=$HOME/.local
# javascript
export PNPM_HOME=$HOME/.local/share/pnpm
# go
export GO_HOME=/usr/local/go
export GOPATH=$HOME/Code/workspace/go
export GO111MODULE=on
export GOPROXY=https://proxy.golang.com.cn,direct
# git-info
export GIT_INFO_HOME=$HOME/.config/git-info
# lsp
export LSP_SERVER=$HOME/.emacs.d/cache/lsp-servers/bin
# vargrant
export VAGRANT_DEFAULT_PROVIDER=libvirt
# export VAGRANT_HOST_KEY_CHECKING=False

# rtx, Polyglot runtime manager (asdf rust clone)
export RTX_HOME=$HOME/.local/share/rtx


export PATH=$RTX_HOME/bin:$PNPM_HOME:$LSP_SERVER:$PYTHONUSERBASE/bin:$GO_HOME/bin:$GOPATH/bin:$GIT_INFO_HOME:$PATH
